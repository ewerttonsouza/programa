// 1. Exibir uma mensagem de boas-vindas no console do navegador
let nome = "Ewertton";
console.log("Olá, " + nome + "!");

// 2. Exibir uma mensagem de boas-vindas usando alert
alert("Olá, " + nome + "!");

// 3. Perguntar ao usuário qual a linguagem de programação que ele mais gosta e exibir no console
let linguagemFavorita = prompt("Qual a linguagem de programação que você mais gosta?");
console.log("A linguagem de programação que você mais gosta é: " + linguagemFavorita);

// 4. Realizar a soma de dois valores e exibir o resultado no console
let valor1 = 10;
let valor2 = 20;
let resultadoSoma = valor1 + valor2;
console.log("A soma de " + valor1 + " e " + valor2 + " é igual a " + resultadoSoma + ".");

// 5. Realizar a subtração de dois valores e exibir o resultado no console
let resultadoSubtracao = valor1 - valor2;
console.log("A diferença entre " + valor1 + " e " + valor2 + " é igual a " + resultadoSubtracao + ".");

// 6. Verificar se a pessoa é maior ou menor de idade e exibir a mensagem no console
let idade = prompt("Insira sua idade:");
if (idade >= 18) {
    console.log("Você é maior de idade.");
} else {
    console.log("Você é menor de idade.");
}

// 7. Verificar se um número é positivo, negativo ou zero e exibir a mensagem no console
let numero = prompt("Insira um número:");
numero = Number(numero);
if (numero > 0) {
    console.log("O número é positivo.");
} else if (numero < 0) {
    console.log("O número é negativo.");
} else {
    console.log("O número é zero.");
}

// 8. Usar um loop while para imprimir os números de 1 a 10 no console
let i = 1;
while (i <= 10) {
    console.log(i);
    i++;
}

// 9. Verificar se uma nota é maior ou igual a 7 e exibir a mensagem no console
let nota = 8; // Você pode mudar este valor para testar
if (nota >= 7) {
    console.log("Aprovado");
} else {
    console.log("Reprovado");
}

// 10. Gerar um número aleatório e exibir no console
let numeroAleatorio = Math.random();
console.log("Número aleatório: " + numeroAleatorio);

// 11. Gerar um número inteiro entre 1 e 10 e exibir no console
let numeroAleatorio1a10 = Math.floor(Math.random() * 10) + 1;
console.log("Número aleatório entre 1 e 10: " + numeroAleatorio1a10);

// 12. Gerar um número inteiro entre 1 e 1000 e exibir no console
let numeroAleatorio1a1000 = Math.floor(Math.random() * 1000) + 1;
console.log("Número aleatório entre 1 e 1000: " + numeroAleatorio1a1000);
